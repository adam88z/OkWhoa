<script>
    $("#adamModalButton").on("click", function () {
        $(".adam-modal").toggle();
    });

    $("#btnSendData").on("click", function () {
        sendData();
    });

    function showModal() {
        $(".adam-modal").showhide();
    }

    function sendData() {
        var firstname = $("#txtFirstName").val();
        var lastname = $("#txtLastName").val();
        var email = $("#txtEmail").val();

        $.ajax({
            url: '@Url.Action("Index", "Home")',
            type: 'POST',
            data: {
                FirstName: firstname,
                LastName: lastname,
                Email: email
            },
            success: function () {
                alert("Success");
            }
        });
    }

    function deleteUser(x) {
        var id = x.id;

        $.ajax({
            url: '@Url.Action("DeleteUser", "Home")',
            type: 'POST',
            data: { id: id },
            success: function () {
                alert("Success");
            }
        });
    }
</script>